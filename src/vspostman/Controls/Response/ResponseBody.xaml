<local:ResponseBase x:Class="VsPostman.Controls.Response.ResponseBody"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VsPostman.Controls.Response"
             x:Name="ResponseBodyControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="txtResponseBody" Text="{Binding ElementName=ResponseBodyControl,Path=Response.ResponseString}"/>
    </Grid>
</local:ResponseBase>
