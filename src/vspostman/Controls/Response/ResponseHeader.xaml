<local:ResponseBase x:Class="VsPostman.Controls.Response.ResponseHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VsPostman.Controls.Response"
             mc:Ignorable="d" 
             x:Name="ResponseHeaderControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dgHeaders" ColumnWidth="30" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding ElementName=ResponseHeaderControl,Path=Response.HeaderCollection}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Header" Binding="{Binding Key}" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:ResponseBase>
